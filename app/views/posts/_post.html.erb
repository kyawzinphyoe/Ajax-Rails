<div class="col-md-3" id="post_<%= post.id %>">
    <div class="card mt-3">
        <div class="card-header" style="background-color: #17a2b8">
        	<h5 class="mb-0" style="color: #fff"><%= post.title %> Post</h5>
        	<p class="mb-0" style="color: #fff"><%= time_ago_in_words(post.created_at) %> ago</p>
        </div> 
        <div class="card-body border border-info">
            <b><p><%= post.content %></p></b>
            <hr>
            <div class="row justify-content-sm-center">	
	            <!-- Button trigger modal -->
				<button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#editPost_<%= post.id %>">
				  Edit
				</button>|
	            <%= link_to "Delete", post, method: :delete, class: "btn btn-danger btn-sm"%>
	        </div>
        </div>
    </div>
</div>




<!-- Modal -->
<%= form_for(post, :method => :put) do |form| %>
<div class="modal fade" id="editPost_<%= post.id %>" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPostLabel"><%= post.title%> Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <%= form.label :title %>
                    <%= form.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= form.label :content %>
                    <%= form.text_area :content, class: 'form-control' %>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <%= form.submit "Post", class: "btn btn-info" %>
            </div>
        </div>
    </div>
</div>
<% end %>
